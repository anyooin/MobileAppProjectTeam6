<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/timertodoList"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/timertodoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title =  "
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timertodoDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="date = "
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timertodoTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time = "
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timertodoContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content = "
            android:textSize="15dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center|right">
        <Button
            android:id="@+id/timertodoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:padding="3dp"
            android:text="check"
            android:layout_marginRight="20dp"
            android:textColor="#ffffff"
            android:background="@drawable/timer_button"/>
        <Button
            android:id="@+id/timerselectBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:padding="3dp"
            android:text="select"
            android:textColor="#ffffff"
            android:background="@drawable/timer_button"/>

    </LinearLayout>

</LinearLayout>