<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/timertodoList"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="8dp"
    android:padding="5dp">

    <ImageView
        android:layout_width="5dp"
        android:layout_height="50dp"
        android:background="@color/light_blue"
        android:layout_marginEnd="10dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/timertodoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_gravity="left"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/timertodoCategoty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카테고리"
                android:textSize="10dp"
                android:layout_gravity="right"/>

        </LinearLayout>

        <TextView
            android:id="@+id/timertodoTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간대"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/timertodoContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용"
            android:maxLines="1"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.2"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center|end"
        android:layout_marginEnd="10dp">
        <Button
            android:id="@+id/timertodoBtn"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:minWidth="0dp"
            android:padding="3dp"
            android:text="정보확인"
            android:textSize="10sp"
            android:layout_marginRight="20dp"
            android:textColor="#ffffff"
            android:background="@drawable/day_cell_today"/>
        <Button
            android:id="@+id/timerselectBtn"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:minWidth="0dp"
            android:padding="3dp"
            android:text="선택"
            android:textSize="10sp"
            android:textColor="#ffffff"
            android:background="@drawable/day_cell_today"/>

    </LinearLayout>

</LinearLayout>